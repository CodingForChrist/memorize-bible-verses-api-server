{
  "name": "memorize-bible-verses-api-server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Node.js Express server that wraps API.Bible",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "check-node-version": "node src/tasks/checkNodeVersion.ts",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest",
    "dev": "npm start",
    "start": "npm run check-node-version && node --watch src/server.ts | pino-pretty",
    "start-production": "node src/server.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@isaacs/ttlcache": "^2.0.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pino": "^10.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/node": "^24.9.1",
    "@types/semver": "^7.7.1",
    "@types/supertest": "^6.0.3",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "semver": "^7.7.3",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  }
}

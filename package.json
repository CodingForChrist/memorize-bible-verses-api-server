{
  "name": "memorize-bible-verses-api-server",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js Express server that wraps API.Bible",
  "main": "src/server.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "check-node-version": "tsx src/checkNodeVersion.ts",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest",
    "dev": "npm start",
    "start": "npm run check-node-version && tsx --watch src/server.ts | pino-pretty",
    "start-production": "node dist/src/server.js"
  },
  "license": "MIT",
  "dependencies": {
    "@isaacs/ttlcache": "^1.4.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "pino": "^9.9.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/semver": "^7.7.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "semver": "^7.7.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}

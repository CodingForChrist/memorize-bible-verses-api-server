{
  "name": "memorize-scripture-server",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js Express server that wraps API.Bible",
  "main": "src/server.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "check-node-version": "tsx src/checkNodeVersion.ts",
    "clean": "rm -rf dist",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest",
    "start": "npm run check-node-version && tsx --watch src/server.ts",
    "start-production": "node dist/server.js"
  },
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "pino": "^9.7.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "@types/semver": "^7.7.0",
    "prettier": "^3.5.3",
    "semver": "^7.7.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}

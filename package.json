{
  "name": "memorize-bible-verses-api-server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Node.js Express server that wraps API.Bible",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "check-node-version": "node src/tasks/check-node-version.ts",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "test": "vitest",
    "dev": "npm start",
    "start": "npm run check-node-version && node --watch src/server.ts | pino-pretty",
    "start-production": "node src/server.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@isaacs/ttlcache": "^2.1.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pino": "^10.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@flydotio/dockerfile": "^0.7.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/node": "^24.9.1",
    "@types/semver": "^7.7.1",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.7.4",
    "semver": "^7.7.3",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.4"
  }
}
